<div class= "books_nav">
  <div class ="book_nav_title">
      <h2><a href="/books">Books</a></h2>
  </div>
  <div class="books_nav_menu">
    <ul>
      <li><a href="/books/new">Add a book</a></li>
      <li><a href="/loans/new">Check out a book</a></li>
      <li><a href="/books/available">Available books</a></li>
      <li><a href="/books/on-loan">Books on loan</a></li>
    </ul>
  </div>
</div>
<br>
<div class="books_forms">
  <form method="get" action="/books" >
      <label for="age_range">Age range:</label>
      <select id="age_range" name="age_range">
      <% @books.map{|book| book.age_range}.uniq.each do |age| %>
      <option value="<%=age%>"><%=age%></option>
      <% end %>
      </select>
    <input type="submit" value="Filter books"/>
  </form>
<br>
  <form method="get" action="/books">
    <label for="search">Search by title or author:</label>
    <input id= "search" type="text" name="search_input"/>
    <input type="submit" value="Search"/>
  </form>
</div>
<br>
<div class="books_display">
<% for book in @books %>
  <p><img class ="book_image" src="images/<%=book.image %>"/><br>
    <strong>Title</strong>: <%= book.title %><br>
    <strong>Author:</strong> <%= book.author %><br>
    <strong>Illustrator:</strong> <%= book.illustrator %><br>
  <a href="/books/<%= book.id %>">See book details</a></p>
<% end %>
</div>
